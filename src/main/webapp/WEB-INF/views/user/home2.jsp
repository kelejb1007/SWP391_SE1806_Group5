                // Initialize Roundabout
                var $roundabout = $("#left-slide-02");
                $roundabout.roundabout({
                    margin: 0.7,
                    autoplay: true,
                    autoplayDuration: 5000,
                    responsive: true,
                    btnNext: ".next",
                    btnPrev: ".prev",
                    triggerFocusEvents: true,
                    triggerBlurEvents: true,
